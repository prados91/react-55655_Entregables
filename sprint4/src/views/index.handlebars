<main class="flex-grow-1 d-flex flex-column align-items-center p-3 my-2 w-100">
    <h2 class="text-center">{{title}}</h2>
    <div class="flex-grow-1 d-flex flex-wrap justify-content-evenly align-items-center">
        {{#each products}}
        <div class="card m-2" style="width: 320px;">
            <img src="{{this.photo}}" style="height: 350px;" class="card-img-top object-fit-cover img-fluid"
                alt="{{this.title}}" />
            <h5 class="card-title text-center m-1 p-1">{{this.title}}</h5>
        </div>
        {{/each}}
    </div>
</main>